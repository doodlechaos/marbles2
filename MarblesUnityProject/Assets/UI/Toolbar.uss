/* Base toolbar layout and structure */
#overlay-root {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: auto;
}

#top-bar {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
    padding: 8px 12px;
    height: auto;
}

.toolbar {
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
} 

.toolbar-left {
    justify-content: flex-start;
}

.toolbar-right {
    justify-content: flex-end;
}
